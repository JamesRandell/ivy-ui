{
    "name": "ivy_ui",
    "version": "1.0.0",
    "scripts": {
        "start": "node resource/script/server/server.js",
        "dev": "npx nodemon server.js"
    },
    "dependencies": {
        "nodemon": "^2.0.12",
        "typescript": "^4.4.2",
        "ws": "^8.2.1"
    },
    "type": "module",
    "nodemonConfig": {
        "watch": [
            "/resource/script/server*"
        ],
        "ignore": [
            "/src/typescript/*",
            "/resource/client/*"
        ],
        "delay": 1,
        "execMap": {
            "pl": "perl"
        },
        "ext": "js"
    },
    "devDependencies": {
        "@types/node": "^16.7.13"
    }
}
